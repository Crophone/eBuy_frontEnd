.orders {
  display: -webkit-box;
  display: flex;
  margin-left: 0;
  padding: 5px 15px;
  overflow: hidden;
  position: relative;
  font-size: 14px;
}
.orders__detail {
  -webkit-box-flex: 1;
  flex: 1;
  margin-left: 10px;
  position: relative;
}

.orders__detail-row {
  overflow: hidden;
  line-height: 20px;
  min-height: 20px;
  margin-bottom: 3px;
  word-break:break-all;
}

.orders__right-col {
  float: right;
}

.orders__left-col {
  margin-right: 80px;
}


.orders-pull-left {
  float: left;
}

.orders-pull-right {
  float: right;
}

.orders-center {
  text-align: center;
}

.orders-right {
  text-align: right;
}

.orders-text-deleted {
  text-decoration: line-through;
}

.orders-font-8 {
  font-size: 8px;
}

.orders-font-10 {
  font-size: 10px;
}

.orders-font-12 {
  font-size: 12px;
}

.orders-font-14 {
  font-size: 14px;
}

.orders-font-16 {
  font-size: 16px;
}

.orders-font-18 {
  font-size: 18px;
}

.orders-font-20 {
  font-size: 20px;
}

.orders-font-22 {
  font-size: 22px;
}

.orders-font-24 {
  font-size: 24px;
}

.orders-font-26 {
  font-size: 26px;
}

.orders-font-30 {
  font-size: 30px;
}

.orders-font-bold {
  font-weight: 700;
}

.orders-arrow {
  position: absolute;
  right: 15px;
  top: 50%;
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  -webkit-transform: translateY(-50%) matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: translateY(-50%) matrix(0.71, 0.71, -.71, 0.71, 0, 0);
}

.orders-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.orders-ellipsis--l2 {
  max-height: 40px;
  line-height: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.orders-ellipsis--l3 {
  max-height: 60px;
  line-height: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.orders-clearfix {
  zoom: 1;
}

.orders-clearfix::after {
  content: '';
  display: table;
  clear: both;
}

.orders-c-red {
  color: #f44;
}

.orders-c-black {
  color: #000;
}

.orders-c-green {
  color: #06bf04;
}

.orders-c-blue {
  color: #38f;
}

.orders-c-gray {
  color: #c9c9c9;
}

.orders-c-gray-dark {
  color: #999;
}

.orders-c-gray-darker {
  color: #666;
}

.orders-hairline, .orders-hairline--bottom, .orders-hairline--left, .orders-hairline--right,
.orders-hairline--surround, .orders-hairline--top, .orders-hairline--top-bottom {
  position: relative;
}

.orders-hairline--bottom::after, .orders-hairline--left::after,
.orders-hairline--right::after, .orders-hairline--surround::after,
.orders-hairline--top-bottom::after, .orders-hairline--top::after,
.orders-hairline::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
}

.orders-hairline--top::after {
  border-top-width: 1px;
}

.orders-hairline--left::after {
  border-left-width: 1px;
}

.orders-hairline--right::after {
  border-right-width: 1px;
}

.orders-hairline--bottom::after {
  border-bottom-width: 1px;
}

.orders-hairline--top-bottom::after {
  border-width: 1px 0;
}

.orders-hairline--surround::after {
  border-width: 1px;
}
